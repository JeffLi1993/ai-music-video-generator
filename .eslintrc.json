{
  "root": true,
  "extends": ["next/core-web-vitals", "../eslint/react"],
  "plugins": ["@remotion"],
  "overrides": [
    {
      "files": ["remotion/**/*.{ts,tsx}"],
      "extends": ["plugin:@remotion/recommended"]
    }
  ], 
  "rules": {
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "no-use-before-define": {
      "functions": false,
      "classes": false
    }
  }
}
